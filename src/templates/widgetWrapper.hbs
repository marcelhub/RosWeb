<div class="jsWidgetWrapper cssWidgetWrapper" data-widget-id="{{id}}" style="left:{{posX}}px;top:{{posY}}px;width:{{width}}px;height:{{height}}px;position:absolute;">
    <div class="panel panel-primary cssWidgetPanelPrimary">
        <div class="panel-heading clearfix cssWidgetPanelHeader">
            <div class="panel-title pull-left">
                <h4>{{topicImplementation}}: {{topic}}</h4>
            </div>     
            {{#if btnRemove}}
                <a type="button" class="btn btn-default pull-right jsWidgetRemove cssWidgetRemove" href="#">
                    <i class="fa fa-window-close fa-lg" aria-hidden="true"></i>
                </a>
            {{/if}}
            {{#if btnSettings}}
                <a type="button" class="btn btn-default pull-right jsWidgetSettings cssWidgetSettings" href="#"  data-toggle="modal" data-target="#modal-{{id}}">
                    <i class="fa fa-cog fa-lg" aria-hidden="true"></i>
                </a>
            {{/if}}
        </div>
        <div class="panel-body cssWidgetPanelBody">
        </div>
    </div>
</div>