<div id="modal-{{id}}" class="modal fade" role="dialog" style="color: black;">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Settings: {{implementation}}</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal">
                      <div class="form-group">
              <label class="control-label col-xs-2" id="widget-{{id}}-key-ip">ip:</label>
                  <div class="col-xs-10">
              <input type="text" class="form-control" value="{{settings.ip}}" id="widget-{{id}}-value-ip"></input>
              </div>
            </div>
                        <div class="form-group">
              <label class="control-label col-xs-2" id="widget-{{id}}-key-port">port:</label>
                  <div class="col-xs-10">
              <input type="text" class="form-control" value="{{settings.port}}" id="widget-{{id}}-value-port"></input>
              </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success jsWidgetSettingsSave" data-dismiss="modal">Save</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>